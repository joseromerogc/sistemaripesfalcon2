<div id="dt_example">
<div id="container">
    
<table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
	<thead>
		<tr>
			<th>#</th><th>Nombre de Usuario</th><th>Tipo de Usuario</th><th></th><th></th>
		</tr>
	</thead>
	<tbody>
	
{% set i = 1 %}

{% for user in usuarios %}

	{% if user.idrole == 1 %}
			{% set class = 'gradeA' %}
	{% elseif  user.idrole == 2 %}	
			{% set class = 'gradeC' %}
	{% elseif  user.idrole == 5 %}	
			{% set class = 'gradeX' %}
	{% else %}	
			{% set class = 'gradeU' %}		
{% endif %}	
	
		<tr class="{{class}}">
<td>{{i}}</td><td>{{user.username | lower}}</td><td>{{user.name}}</td><td><a class="enlace" href="{{path('usuario_show',{'id':user.id})}}">Mostrar</a></td>
    <td><a class="enlace" href="{{path('usuario_update',{'id':user.id})}}">Actualizar</a></td>
    
{% set i = i+1 %}
{% endfor %}    
    
		</tr>
        </tbody>        
</table>
</div>
</div>

<a href="new" id="boton_nuevo">Nuevo Usuario</a>

<script src="{{asset('js/jquery.dataTables.js')}}" type="text/javascript" type="text/javascript"></script>
<script src="{{asset('js/dataTables.tableTools.js')}}" type="text/javascript" type="text/javascript"></script>

