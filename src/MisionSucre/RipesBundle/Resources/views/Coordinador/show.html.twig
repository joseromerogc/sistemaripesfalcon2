            </tr><!-- Table Row -->
            </table>
            {% else %}    
                <h2 class="sub_heading_style"><span class='icon'><img src="{{asset('img/Actions-edit-delete-icon.png')}}"/><span>Sin Datos</h2>
               <a style='margin-left: 12px;' class="enlace" href="{{path('persona_social_new',{'id':usuario.id})}}"> 
