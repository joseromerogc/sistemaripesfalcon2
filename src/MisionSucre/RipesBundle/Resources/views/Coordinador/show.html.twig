{% block content %}
	{{ parent() }}

        
{% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
        {{ flashMessage }}
        </div>
{% endfor %}

<div id="tabs">
    <ul>
		<li><a href="#usuario">Usuario</a></li>
		<li><a href="#personales">Personales</a></li>
		<li><a href="#sociales">Sociales, Comunitarios y Politicos</a></li>
                <li><a href="#academico">Académico</a></li>
    </ul>
<div id="usuario">    
    <h1 class="heading_style">Información de Usuario</h1> 
    <table cellspacing='0'> <!-- cellspacing='0' is important, must stay -->
            <tr><th>ID</th><th>Nombre de Usuario</th><th>Tipo de Usuario</th><th>Nombres</th><th>Apellidos</th><th></th><th></th></tr><!-- Table Header -->


        <tr><td>{{usuario.id}}</td><td>{{usuario.username}}</td><td>{{usuario.name}}</td><td>{{persona.priNom|capitalize}} {{persona.segNom|capitalize}}</td>
            <td>{{persona.priApe|capitalize}} {{persona.segApe|capitalize}}</td>
            <td><a class="enlace" href="{{path('usuario_update',{'id':usuario.id})}}">Actualizar</a></td>
            {% if is_granted('ROLE_COORD')  %}
            <td><a class="enlace" onclick="return confirm('******Confirmar Borrar******')" href="{{path('usuario_delete',{'id':usuario.id})}}">Borrar</a></td>
            {% endif%}
        </tr><!-- Table Row -->
    </table>
    
      
  {% if  coordinador %}  
      <h1 class="heading_style">Coordinador de Aldea</h1> 
    <table cellspacing='0' > <!-- cellspacing='0' is important, must stay -->
	<tr><th>ID</th><th>Nombre de Aldea</th><th></th><th><!-- Table Header -->  
        </tr><!-- Table Header -->  
    <tr>
        <td>{{coordinador.id}}</td>
        <td><a class="enlace" href="{{path('aldea_show',{'id':coordinador.aldea.id})}}">{{coordinador.aldea.nombre}}</a></td>
        <td><a class="enlace"  href="{{path('aldea_coordinador_update',{'id': coordinador.id})}}">Actualizar</a></td>
        <td><a class="enlace" onclick="return confirm('******Confirmar Borrar******')" href="{{path('aldea_coordinador_delete',{'id': coordinador.id})}}">Borrar</a></td>
    </tr><!-- Table Row -->
    </table>
  {% else %}    
      <a style='margin-left: 12px;' class="enlace" href="{{path('aldea_coordinador_new',{'id':usuario.id})}}"> 
                   <span class='icon'><img src="{{asset('img/add-1-icon.png')}}"/></span> Asignar Aldea</a> 
  {% endif %}
  
  <h1 class="heading_style">Turnos</h1> 
  
   {% if  turnos %}  
    <table cellspacing='0' > <!-- cellspacing='0' is important, must stay -->
	<tr><th>ID</th><th>Turno</th><th></th><th><!-- Table Header -->  
        </tr><!-- Table Header -->  
    <tr>
        {% for t in turnos%}   
            <td>{{t.id}}</td>
            <td>{{t.turno}}</td>
            <td><a class="enlace"  href="{{path('aldea_coordinador_update',{'id': t.id})}}">Actualizar</a></td>
            <td><a class="enlace" onclick="return confirm('******Confirmar Borrar******')" href="{{path('coordinador_turno_delete',{'idturno': t.id})}}">Borrar</a></td>
        {%endfor %}
    </tr><!-- Table Row -->
    </table>
{% endif %}
      {% if  coordinador %} 
      <a style='margin-left: 12px;' class="enlace" href="{{path('coordinador_turno_new',{'id':coordinador.id})}}"> 
                   <span class='icon'><img src="{{asset('img/add-1-icon.png')}}"/></span> Asignar Turno</a> 
      {% endif %} 
  
  
</div>

        
<div id="personales" >
<h1 class="heading_style">Datos Personales</h1> 
  
  {% if  persona %}  
    <table cellspacing='0' > <!-- cellspacing='0' is important, must stay -->
	<tr><th>ID</th><th>Nombres</th><th>Apellidos</th><th>Cédula</th><th>Fecha de Nacimiento</th><th>Edad</th>
	<th>Sexo</th><th>Estado Civil</th><th>Teléfono</th><th>Celular</th>
        </tr><!-- Table Header -->  
    <tr>
        <td>{{persona.id}}</td><td>{{persona.priNom|capitalize}} {{persona.segNom|capitalize}}</td><td>{{persona.priApe|capitalize}} {{persona.segApe|capitalize}}</td>
        <td>{% if persona.codCed %} {% set c='E'%} {% else %}{% set c='V'%}{% endif %}{{c}}.-{{persona.cedPer}}</td>
        <td> {{ persona.fechPer|date("d/m/Y")}}</td> <td> {{ persona.edadPer}}</td>
        <td>{% if persona.sexPer =='m'%} {% set s='Masculino'%} {% else %}{% set s='Femenino'%}{% endif %}{{s}}</td>
        <td> {{ persona.edoCiv}}</td>
        <td> {{ persona.celPer}}</td><td> {{ persona.telPer}}</td>
        <td><a class="enlace" href="{{path('persona_update',{'id':usuario.id})}}">Actualizar</a></td>
    </tr><!-- Table Row -->
    </table>
    
  {% else %}    
    <a style='margin-left: 12px;' class="enlace" href="{{path('persona_new',{'id':usuario.id})}}"> <span class='icon'>
    <img src="{{asset('img/add-1-icon.png')}}"/></span> Agregar Datos Personales</a> 
  {% endif %}    
  <h1 class="heading_style">Ubicación de Vivienda</h1> 
  {% if ubicacionvivienda %}  
  <table cellspacing='0'> <!-- cellspacing='0' is important, must stay -->
	<tr><th>Municipio</th><th>Parroquia</th><th>Sector</th><th colspan="2">Dirrección</th>
        </tr><!-- Table Header -->  
    <tr>
        <td>{{ubicacionvivienda.sector.parroquia.municipio.municipio}}</td><td>{{ubicacionvivienda.sector.parroquia.parroquia}}</td><td>{{ubicacionvivienda.sector.nombre}}</td>
        <td colspan="2">{{ubicacionvivienda.direccion}}</td><td><a class="enlace" href="{{path('ubicacion_vivienda_update',{'id':usuario.id})}}">Actualizar</a></td>
    </tr><!-- Table Row -->
   </table>
   {% else %}    
    <a style='margin-left: 12px;' class="enlace" href="{{path('ubicacion_vivienda_new',{'id':usuario.id})}}"> <span class='icon'>
    <img src="{{asset('img/add-1-icon.png')}}"/></span> Agregar Datos Vivienda</a> 
  {% endif %}     
</div>
  
<div id="sociales">
